# Comma-separated list of supported chains (network names from @superfluid-finance/metadata)
CHAINS=eth-mainnet,polygon,base-mainnet

# Comma-separated list of token addresses for base-mainnet
TOKENS_BASE_MAINNET=0xa69f80524381275a7ffdb3ae01c54150644c8792,0xcaa7349cea390f89641fe306d93591f87595dc1f

# Snapshot update interval in seconds (default: 3600 = every hour)
UPDATE_INTERVAL=3600

# Port for the API server
PORT=3000

# RPC batch size for balance queries (default: 100)
RPC_BATCH_SIZE=100 